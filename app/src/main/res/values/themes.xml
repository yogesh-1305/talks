<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Talks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_palette_4</item>
        <item name="colorPrimaryVariant">#020000</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/light_blue_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="statusBarBackground">@color/white</item>-->
<!--        <item name="statusBarForeground">@color/black</item>-->
<!--        &lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <!--        change window background color-->
        <item name="android:windowBackground">@color/white</item>

        <!--        Makes the status bar transparent-->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->

        <!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
    </style>

    <style name="ActionBarTheme" parent="Theme.Talks">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="Theme.Talks.Fullscreen" parent="Theme.Talks">
        <item name="android:actionBarStyle">@style/Widget.Theme.Talks.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Talks.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.Talks.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Talks.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Talks.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>