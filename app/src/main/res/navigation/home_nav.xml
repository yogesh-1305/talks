<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav"
    app:startDestination="@id/homeScreenFragment">
    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.example.talks.ui.home.fragments.HomeScreenFragment"
        android:label=""
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeScreenFragment_to_chatFragment"
            app:destination="@id/chatFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_homeScreenFragment_to_contactsFragment"
            app:destination="@id/contactsFragment" />
    </fragment>
    <activity
        android:id="@+id/chatActivity"
        android:name="com.example.talks.ui.chat.activity.ChatActivity"
        android:label="activity_chat"
        tools:layout="@layout/activity_chat">
        <argument
            android:name="phoneNumber"
            app:argType="string" />
    </activity>
    <activity
        android:id="@+id/contactListActivity"
        android:name="com.example.talks.ui.contacts.activity.ContactListActivity"
        android:label=""
        tools:layout="@layout/activity_contact_list" />
    <fragment
        android:id="@+id/videoRoomFragment"
        android:name="com.example.talks.ui.meet.VideoRoomFragment"
        android:label=""
        tools:layout="@layout/fragment_video_room" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.talks.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <argument
            android:name="chat_user_phone"
            app:argType="string"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.example.talks.ContactsFragment"
        android:label="fragment_contacts"
        tools:layout="@layout/fragment_contacts" >
        <action
            android:id="@+id/action_contactsFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
</navigation>