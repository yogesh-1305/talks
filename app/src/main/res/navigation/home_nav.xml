<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav"
    app:startDestination="@id/homeScreenFragment">
    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.example.talks.home.homeScreen.HomeScreenFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeScreenFragment_to_chatActivity"
            app:destination="@id/chatActivity" />
    </fragment>
    <fragment
        android:id="@+id/contactScreenFragment"
        android:name="com.example.talks.home.contactScreen.ContactScreenFragment"
        android:label="Contacts"
        tools:layout="@layout/fragment_contact_screen" >
        <action
            android:id="@+id/action_contactScreenFragment_to_chatActivity"
            app:destination="@id/chatActivity" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.talks.home.SettingsFragment"
        android:label="SettingsFragment" />
    <activity
        android:id="@+id/chatActivity"
        android:name="com.example.talks.chat.ChatActivity"
        android:label="activity_chat"
        tools:layout="@layout/activity_chat" >
        <argument
            android:name="phoneNumber"
            app:argType="string" />
        <argument
            android:name="userName"
            app:argType="string" />
        <argument
            android:name="userImage"
            app:argType="string" />
        <argument
            android:name="userID"
            app:argType="string" />
    </activity>
</navigation>